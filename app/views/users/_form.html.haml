= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name
  .field
    = f.label :default_ship, 'Default Shipping Address'
    %br/
    - address_array = User.find(current_user.id).addresses { |address| [address.id, address.address] }
    = f.select(:default_ship, address_array)
  .field
    = f.label :default_bill, 'Default Billing Address'
    %br/
    - address_array = User.find(current_user.id).addresses { |address| [address.id, address.address] }
    = f.select(:default_bill, address_array)
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :email_confirmation
    %br/
    = f.text_field :email_confirmation
  .field
    = f.label :password
    %br/
    = f.password_field :password
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  .actions
    = f.submit