<%= stylesheet_link_tag "sign_up" %>
<h2>Computer Geeks Account Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <ul class="sign_up">
    <li><%= f.label :first_name, class: "label"%>
    <%= f.text_field :first_name,class: "input", autofocus: true%></li>

    <li><%= f.label :last_name, class: "label"%>
    <%= f.text_field :last_name, class: "input"%></li>

    <li><%= f.label :email, class: "label"%>
    <%= f.email_field :email, class: "input"%></li>

    <li><%= f.label :email_confirmation, class: "label"%>
    <%= f.email_field :email_confirmation, class: "input", autocomplete: "off"%></li>

    <li><%= f.label :password, class: "label"%>
    <%= f.password_field :password, class: "input" %></li>

    <li><%= f.label :password_confirmation, class: "label"%>
      <%= f.password_field :password_confirmation, class: "input", autocomplete: "off" %></li>
    <br />
    <li><%= f.submit "Create Account" %></li>
   </ul>
<% end %>

