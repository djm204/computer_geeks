%section.product
  %p
    %h4= link_to(product.name, product)
    %span.category= "Category: #{product.category.name}"
  %p.description= product.description
  %p.price= "Price: #{currency(product.price)}"
  %p.stock_quantity= "In-Stock: #{product.stock_quantity}"
  %p.image= image_tag(product.productImage)
  %p
    %button Add to Cart